# Generated by Chef

[mysqld]

# GENERAL #
user                           = mysql
default_storage_engine         = InnoDB


# SAFETY #
max_allowed_packet             = 16M
max_connect_errors             = 1000000
slave_transaction_retries      = 60

# DATA STORAGE #
datadir=<%= node['server']['data_dir'] %>

# BINARY LOGGING #
log_bin                        = <%= node['server']['bin_log_dir'] %>/<%= node['server']['bin_log'] %>
expire_logs_days               = 14
sync_binlog                    = <%= node['server']['server_sync_binlog'] %>
binlog_format                  = ROW

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 0
query_cache_size               = 0
max_connections                = 500
thread_cache_size              = 50
open_files_limit               = 65535
table_definition_cache         = 4096
table_open_cache               = 4096

# INNODB #
innodb_flush_method            = O_DIRECT
innodb_log_files_in_group      = 2
innodb_log_file_size           = 512M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table          = 1
innodb_buffer_pool_size        = <%= node['server']['innodb_buffer_pool_size'] %>

<% if node['server']['query_cache_type'] == 'ON' %>
#Introduce Query_cache_in slave only
query_cache_type		= <%= node['server']['query_cache_type'] %>
query_cache_size		= <%= node['server']['query_cache_size'] %>
query_cache_limit		= <%= node['server']['query_cache_limit'] %>

<% end %>
# Added after percona suggestion
innodb_old_blocks_time=1000
innodb_buffer_pool_instances=8
innodb_adaptive_flushing_method=keep_average
innodb_flush_neighbor_pages=none
innodb_read_ahead = none

# LOGGING # percona_server_log_dir
log_error                      = <%= node['server']['log_dir'] %>/<%= node['server']['error_log'] %>
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = <%= node['server']['log_dir'] %>/<%= node['server']['slow_log'] %>

# Custom Parameters
transaction-isolation = READ-COMMITTED

<% if node['server']['mysql_server_id'] %>
read-only        = <%= node['server']['mysql_read_only'] %>

# replication
server_id=<%= node['server']['mysql_server_id'] %>
skip-slave-start
relay-log = <%= node['server']['bin_log_dir'] %>/<%= node['server']['relay_log'] %>
<% end %>
<% if node['server']['log_slave_updates'] %>
log-slave-updates
<% end %>
relay-log-recovery = 1
